<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item2_image1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/colorGray_b" />

        <TextView
            android:id="@+id/item2_text1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:gravity="left||center"
            android:text="寒夜" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/colorGray_b" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_weight="3.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item2_text2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Fragment 实现底部导航栏的简单切换"
                android:textColor="@color/colorGray_b"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item2_text3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="3"
                android:text="第"
                android:textColor="#acadac"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item2_image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@color/colorGray_b" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/pinglun" />

        <TextView
            android:id="@+id/item2_text4"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:text="100"
            android:textColor="#acadac"
            android:textSize="8sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/xihuan" />

        <TextView
            android:id="@+id/item2_text5"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:text="100"
            android:textColor="#acadac"
            android:textSize="8sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>