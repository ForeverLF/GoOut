<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="消息"
        app:titleTextAppearance="@style/MyToolbarTextAppearance"
        app:titleTextColor="@color/colorGray_5">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/click_bg"
            android:padding="10dp"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/click_bg"
            android:padding="10dp"
            android:src="@drawable/ic_notifications" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGray_b" />

    <include layout="@layout/fragment_3_top" />

    <include layout="@layout/fragment_3_content" />

</LinearLayout>
